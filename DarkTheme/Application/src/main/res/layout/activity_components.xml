<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="?attr/colorPrimary"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="@string/component">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/component_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:padding="@dimen/dp16"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/progress_bar"
                app:textAllCaps="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp16"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.progressindicator.ProgressIndicator
                    style="@style/MyProgressBar.Circle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.material.progressindicator.ProgressIndicator
                    style="@style/MyProgressBar.Circle.Track"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.material.progressindicator.ProgressIndicator
                    style="@style/MyProgressBar.Circle.Track.Indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.material.progressindicator.ProgressIndicator
                    style="@style/MyProgressBar.Circle.Multi.Color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.material.progressindicator.ProgressIndicator
                    android:id="@+id/myProgressBarCircleDeterminate"
                    style="@style/MyProgressBar.Circle.Determinate"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp4"
                    android:layout_height="wrap_content" />

                <com.google.android.material.progressindicator.ProgressIndicator
                    style="@style/MyProgressBar.Linear"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp4"
                    android:layout_height="wrap_content" />

                <com.google.android.material.progressindicator.ProgressIndicator
                    style="@style/MyProgressBar.Linear.Track"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp4"
                    android:layout_height="wrap_content" />

                <com.google.android.material.progressindicator.ProgressIndicator
                    style="@style/MyProgressBar.Linear.Track.Indicator"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp4"
                    android:layout_height="wrap_content" />

                <com.google.android.material.progressindicator.ProgressIndicator
                    style="@style/MyProgressBar.Linear.Multi.Color"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp4"
                    android:layout_height="wrap_content" />

                <com.google.android.material.progressindicator.ProgressIndicator
                    android:id="@+id/myProgressBarDeterminate"
                    style="@style/MyProgressBar.Linear.Determinate"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp4"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekbar_for_progress"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp4"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/dp32"
                android:layout_marginBottom="@dimen/dp32"
                android:alpha="0.2"
                android:background="@color/textColorSecondary" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/button"
                app:textAllCaps="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp16"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    style="@style/MyButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_button" />

                <com.google.android.material.button.MaterialButton
                    style="@style/MyButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_button"
                    app:icon="@drawable/ic_home" />

                <com.google.android.material.button.MaterialButton
                    style="@style/MyButton.Stroke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_stroke" />

                <com.google.android.material.button.MaterialButton
                    style="@style/MyButton.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_text" />

                <com.google.android.material.button.MaterialButton
                    style="@style/MyButton.Disable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_disable" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleButton"
                style="@style/MyButton.Toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                app:checkedButton="@+id/button2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button1"
                    style="@style/MyButton.Toggle.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button2"
                    style="@style/MyButton.Toggle.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_2" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button3"
                    style="@style/MyButton.Toggle.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_3" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleButton1"
                style="@style/MyButton.Toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:gravity="center"
                app:checkedButton="@+id/button21">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button11"
                    style="@style/MyButton.Toggle.Button.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_baseline_format_align_left_24" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button21"
                    style="@style/MyButton.Toggle.Button.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_baseline_format_align_center_24" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button31"
                    style="@style/MyButton.Toggle.Button.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_baseline_format_align_right_24" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleButton13"
                style="@style/MyButton.Toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:gravity="center"
                app:checkedButton="@+id/button213"
                app:selectionRequired="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button113"
                    style="@style/MyButton.Toggle.Button.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_baseline_format_align_left_24" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button213"
                    style="@style/MyButton.Toggle.Button.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_baseline_format_align_center_24" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button313"
                    style="@style/MyButton.Toggle.Button.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_baseline_format_align_right_24" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleButton2"
                style="@style/MyButton.Toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:gravity="center"
                app:checkedButton="@+id/button22">

                <com.example.android.darktheme.views.CustomMaterialToggleButton
                    android:id="@+id/button12"
                    style="@style/MyButton.Toggle.Button.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_baseline_format_align_left_24" />

                <com.example.android.darktheme.views.CustomMaterialToggleButton
                    android:id="@+id/button22"
                    style="@style/MyButton.Toggle.Button.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_baseline_format_align_center_24" />

                <com.example.android.darktheme.views.CustomMaterialToggleButton
                    android:id="@+id/button32"
                    style="@style/MyButton.Toggle.Button.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_baseline_format_align_right_24" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/dp32"
                android:layout_marginBottom="@dimen/dp32"
                android:alpha="0.2"
                android:background="@color/textColorSecondary" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/app_compat_spinner"
                app:textAllCaps="true" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:background="@drawable/spinner_background"
                android:entries="@array/themeListArray"
                android:minHeight="@dimen/dp48"
                android:popupBackground="@color/text_input_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/dp32"
                android:layout_marginBottom="@dimen/dp32"
                android:alpha="0.2"
                android:background="@color/textColorSecondary" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/radio_button_group"
                app:textAllCaps="true" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@id/radio_action_yes">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_action_yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yes" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_action_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/dp32"
                android:layout_marginBottom="@dimen/dp32"
                android:alpha="0.2"
                android:background="@color/textColorSecondary" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/edit_text_with_input_layout"
                app:textAllCaps="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_your_full_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:layout_marginBottom="@dimen/dp4" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MyTextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_your_full_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:layout_marginBottom="@dimen/dp4"
                        android:textCursorDrawable="@drawable/edit_text_cursor" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_outline_box"
                    style="@style/MyTextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_your_full_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_input_edit_layout_outline_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:layout_marginBottom="@dimen/dp4"
                        android:lines="1"
                        android:textCursorDrawable="@drawable/edit_text_cursor" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/dp32"
                android:layout_marginBottom="@dimen/dp32"
                android:alpha="0.2"
                android:background="@color/textColorSecondary" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/text_view"
                app:textAllCaps="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/this_is_text_view_display"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp4"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/this_is_text_view_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_marginBottom="@dimen/dp4"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/this_is_text_view" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:backgroundTint="?attr/colorPrimary"
        app:itemIconTint="@color/bottom_nav_item_background_demo"
        app:itemTextColor="@color/bottom_nav_item_background_demo"
        app:menu="@menu/navigation_components" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>