<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="theme_purchase"
        app:title="Purchase">

        <ListPreference
            app:icon="@drawable/ic_baseline_adjust_24"
            app:key="themePurchase"
            app:title="Purchase Pro" />

        <ListPreference
            app:icon="@drawable/ic_baseline_adjust_24"
            app:key="themeTire1"
            app:title="Subscribe Tire I" />

        <ListPreference
            app:icon="@drawable/ic_baseline_adjust_24"
            app:key="themeTire2"
            app:title="Subscribe Tire II" />

        <ListPreference
            app:icon="@drawable/ic_baseline_adjust_24"
            app:key="themeTire3"
            app:title="Subscribe Tire III" />

        <ListPreference
            app:icon="@drawable/ic_baseline_adjust_24"
            app:key="themeRestore"
            app:title="Restore" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="theme_category"
        app:title="Theme">

        <ListPreference
            app:defaultValue="default"
            app:dialogTitle="Choose theme"
            app:entries="@array/themeListArray"
            app:entryValues="@array/themeEntryArray"
            app:icon="@drawable/ic_baseline_adjust_24"
            app:key="themePref"
            app:title="Choose theme"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:icon="@drawable/ic_baseline_adjust_24"
            app:key="themeFAQs"
            app:title="FAQs" />
        <ListPreference
            app:icon="@drawable/ic_baseline_adjust_24"
            app:key="themePrivacyPolicy"
            app:title="Privacy &amp; Policy" />
        <ListPreference
            app:icon="@drawable/ic_baseline_adjust_24"
            app:key="themeOpenSourceLibrary"
            app:title="Open Source Library" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="theme_social"
        app:title="Social">

        <ListPreference
            app:icon="@drawable/ic_baseline_adjust_24"
            app:key="themeFacebook"
            app:title="Facebook" />
        <ListPreference
            app:icon="@drawable/ic_baseline_adjust_24"
            app:key="themeInstagram"
            app:title="Instagram" />
        <ListPreference
            app:icon="@drawable/ic_baseline_adjust_24"
            app:key="themeTwitter"
            app:title="Twitter" />
        <ListPreference
            app:icon="@drawable/ic_baseline_adjust_24"
            app:key="themePinterest"
            app:title="Pinterest" />

    </PreferenceCategory>


</androidx.preference.PreferenceScreen>
